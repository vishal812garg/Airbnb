<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/0ee053556c.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 
    
 
  </head>
  <body>

  <!--Header-->  
  <%- include('../views/Header.ejs'); %> 


  
  <!--Card-->
  
    <div class="container-fluid" style="margin-bottom: 100px;margin-top: 15px;">
      <div class="row d-flex justify-content-around">
        <% data.forEach(db => { %>
          <div class="col-sm-3">
            <div class="card" style="width:280px;height: 380px; box-shadow:0px 0px 0px 12px rgb(230, 227, 228);">
                          <a href="/details/<%=db._id%>"><img src="<%=db.images.picture_url %>" alt="" class="card-img-top" style="max-height: 300px;"></a> 
                          <div class="card-body">
                            
                            <p class="card-title" style="font-weight:bolder;">
                              <span><%=db.address.market%>,</span>
                                  <span><%=db.address.country%></span>  
                                </p>
                                
                                <p class="card-text">
                                  <span><%=db.property_type%></span><br>
                                 <span><%=db.room_type%></span>
                                </p>
                                
                                <p class="card-text" style="font-weight:bolder;">
                            <span><i class="fa-sharp fa-solid fa-indian-rupee-sign"></i><%=db.price%>night</span>
                          </p>
                        </div>
                      </div>
                   </div>    
                   <% });%>

         </div>

         
              <div class="row d-flex justify-content-around">
                   <% data1.forEach(db => { %>
                    <div class="col-sm-3">
                      <div class="card" style="width:280px;height: 380px; box-shadow:0px 0px 0px 12px rgb(230, 227, 228);">
                        <a href="/Hostdetails/<%=db.Host_name%>"><img src="<%=db.House_image%>" alt="" class="card-img-top" style="max-height: 300px;"></a> 
                        <div class="card-body">
                          
                          <p class="card-title" style="font-weight:bolder;">
                            <span><%=db.Market_address%>,</span>
                            <span><%=db.Country_address%></span>  
                          </p>

                          <p class="card-text">
                                 <span><%=db.Home_Apartment_name%></span><br>
                                 <span><%=db.room_type%></span>
                          </p>
                          
                          <p class="card-text" style="font-weight:bolder;">
                            <span><i class="fa-sharp fa-solid fa-indian-rupee-sign"></i><%=db.Night_price%>night</span>
                          </p>
                        </div>
                      </div>
                    </div>    
                   <% });%>

        </div>   
            
      </div>
    

      <!--footer-->
      <%- include('../views/Footer.ejs'); %> 
     
    </body>
</html>