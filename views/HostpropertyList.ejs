<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/0ee053556c.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 
    <title>Document</title>

</head>
<body>
     <!--Header-->  
 <%- include('../views/Header.ejs');%>
 
 
    <div class="container" style="margin-bottom: 80px;">
            <div class="row">
                   <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead>
                                     <tr class="table-dark">
                                        <th>Image</th>
                                        <th>Host Name</th>
                                        <th>House/Apartment Name</th>
                                        <th>Market Address</th>
                                        <th>Country Address</th>
                                        <th>Price</th>
                                        <th>Action</th>
                                     </tr>
                                </thead>

                                <tbody>

                                    <%data.forEach(db =>{ %>
                                      <tr class="text-uppercase">
                                          <td><img src="<%=db.House_image %>" alt="" class="img-thumbnail" width="300"></td>
                                          <td><%=db.Host_name%></td>
                                          <td><%=db.Home_Apartment_name%></td>
                                          <td><%=db.Market_address%></td>
                                          <td><%=db.Country_address%></td>
                                          <td><%=db.Night_price%></td>
                                          <td>
                                            <a href="/editHostproperty/<%=db._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/deleteHostproperty/<%=db._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                          </td>
                                      </tr>

                                      <% }) %>
                                </tbody>

                            </table>

                        </div>       

                   </div>

            </div>    
    </div>

    







  <!--footer-->
  <%- include('../views/Footer.ejs'); %>

</body>
</html>